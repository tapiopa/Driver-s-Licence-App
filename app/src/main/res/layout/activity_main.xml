        android:layout_height="match_parent"
        android:background="@drawable/drive"
        android:minHeight="181dp"
        tools:context=".MainActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/AppBarOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonExam2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="107dp"
            android:layout_height="45dp"
            android:layout_marginTop="165dp"
            android:layout_marginEnd="56dp"
            android:layout_marginBottom="250dp"
            android:background="@android:color/holo_green_light"
            android:onClick="toExamSe"
            android:text="@string/button_take_new_exam_se"
            android:textAppearance="@style/TextAppearance.AppCompat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonInformation" />

        <Button
            android:id="@+id/buttonExam"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="103dp"
            android:layout_height="46dp"
            android:layout_marginTop="165dp"
            android:layout_marginEnd="84dp"
            android:layout_marginBottom="96dp"
            android:background="@android:color/holo_green_light"
            android:onClick="toExamFi"
            android:text="@string/button_take_new_exam"
            android:textAppearance="@style/TextAppearance.AppCompat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonExam2"
            app:layout_constraintTop_toBottomOf="@+id/buttonInformation"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/buttonResults"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="97dp"
            android:layout_height="43dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="132dp"
            android:layout_marginEnd="32dp"

            android:layout_marginBottom="59dp"
            android:background="@android:color/holo_green_light"
            android:onClick="buttonToResults"
            android:text="@string/button_results"
            android:textAppearance="@style/TextAppearance.AppCompat"
